{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}


    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="/images/homepage/mercadona-accueil.jpg" class="d-block mx-lg-auto img-fluid" alt="Supermarché Mercadona" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 lh-1 mb-3">Le catalogue des promotions de Mercadona</h1>
            <p class="lead">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/catalogue">
                <button type="button" class="btn btn-primary btn-lg px-4 me-md-2"> Voir le catalogue </button>
            </a>
            </div>
        </div>
        </div>
<h2 class="lh-1 mb-3">Retrouvez toutes nos catégories</h2>
<div class="container">
    <div class="row">
    <!-- Catégories -->
    {% for category in categories %}
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="card">
                <a href="/catalogue">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.label }} </h5>
                    </div>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
    

{% endblock %}
