{% extends 'base.html.twig' %}

{% block title %}Discount index{% endblock %}

{% block body %}
    <h1>Discount index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Discount_percentage</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discount in discounts %}
            <tr>
                <td>{{ discount.id }}</td>
                <td>{{ discount.discountPercentage }}</td>
                <td>{{ discount.startDate ? discount.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ discount.endDate ? discount.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_discount_show', {'id': discount.id}) }}">show</a>
                    <a href="{{ path('app_discount_edit', {'id': discount.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_discount_new') }}">Create new</a>
{% endblock %}
